<div class="circular-profile">
  <img
    src="/images/samuel-profile.webp"
    alt="Samuel Umoren"
    width="180"
    height="180"
  />
</div>

<style>
  .circular-profile {
    width: 180px;
    height: 180px;
    position: relative;
    margin: 0 auto;
  }

  .circular-profile::before {
    content: "";
    position: absolute;
    top: -5px;
    left: -5px;
    right: -5px;
    bottom: -5px;
    border-radius: 50%;
    background: conic-gradient(
      from 0deg,
      #3b82f6,
      #8b5cf6,
      #ec4899,
      #f59e0b,
      #3b82f6
    );
    z-index: -1;
    animation: rotate 4s linear infinite;
  }

  .circular-profile img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    display: block;
    position: relative;
    z-index: 1;
    border: 3px solid #fff;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
  }

  :global(.dark) .circular-profile img {
    border-color: #1e293b;
  }

  @keyframes rotate {
    100% {
      transform: rotate(360deg);
    }
  }
</style>
